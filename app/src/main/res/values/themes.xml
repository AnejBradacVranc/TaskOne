<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TaskOne" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <style name="Theme.TaskOne" parent="Base.Theme.TaskOne" />

    <style name="NavigationButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="SettingsButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="NavigationExitButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginStart">@dimen/exit_button_margin</item>
        <item name="android:layout_marginTop">@dimen/exit_button_margin</item>
    </style>

    <style name="InfoAboutContent">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/montserratregular</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/big_font_size</item>
        <item name="android:fontFamily">@font/montserratsemibold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainDetailsText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/regular_font_size</item>
        <item name="android:fontFamily">@font/montserratregular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InputLabelText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/regular_font_size</item>
        <item name="android:fontFamily">@font/montserratregular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/underline</item>
    </style>

    <style name="InputField">
        <item name="android:layout_width">@dimen/input_field_width</item>
        <item name="android:layout_height">@dimen/input_field_height</item>
        <item name="android:fontFamily">@font/montserratregular</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name= "android:padding">@dimen/input_field_padding</item>
        <item name= "android:ems">10</item>
    </style>
</resources>